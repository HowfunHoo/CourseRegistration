<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.courseregistration.AddMajorsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/et_majorid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:hint="Major ID"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_majorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/et_majorid"
            android:layout_marginTop="29dp"
            android:hint="Major Name"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/btn_addMajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/et_majorname"
            android:layout_marginEnd="153dp"
            android:layout_marginTop="25dp"
            android:text="add" />

        <ListView
            android:id="@+id/lv_addMajors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_addMajor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>